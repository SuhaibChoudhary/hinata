<style>

.card-img-top {
    margin-left: auto;
    margin-right: auto;
}

  body {
    background-color: #343a40;
    color: #fff;
  }
        .container{
margin: 10px 10px 10px 10px;
        }

  .card {
    width: 300px;
    margin-bottom: 20px;
    border: none;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    background-color: #212529;
    color: #fff;
    text-align: center;
    padding: 20px;
  }

.card-img-top:hover {
        border-radius: 5px;
    transform: scale(1.1);
    box-shadow: 0 2px 55px rgba(0, 123, 255, 0.5);
  }

  .card-img-top {
    text-align: center;
    width: 120px;
    height: 120px;
    object-fit: cover;
    border-radius: 50%;
    margin-bottom: 20px;
    box-shadow: 0 2px 55px rgba(255, 255, 255, 0.2);
    transition: all 1s;
  }

  

  .card-title {
    font-size: 20px;
    margin-top: 10px;
  }

  .card-text {
    font-size: 14px;
    color: #ccc;
    margin-top: 10px;
  }

  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
    font-size: 14px;
    margin-top: 10px;
    padding: 5px 10px;
  }

.card-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between; /* Add space between cards */
  }

  .card-row .card {
    flex: 0 0 300px; /* Adjust card flex basis to fixed width */
  }

  @media (max-width: 768px) {
    .card-row .card {
      padding-left: 20px;
      flex-basis: 100%;
    }
  }
        
</style>

